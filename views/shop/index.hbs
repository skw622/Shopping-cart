{{# each products }}
<div class="row">
    {{# each this }}
    <div class="col-sm-4 col-md-4">
        <div class="thumbnail">
            <img src="images/{{this.imgPath}}" alt="" class="img-responsive">
            <div class="caption">
                <h3>{{this.title}}</h3>
                <p class="desc">{{this.description}}</p>
                <div class="clearfix">
                    <div class="price pull-left">${{this.price}}</div>
                    <div>
                        <a href="/add-to-cart/{{this.id}}" class="btn btn-primary pull-right" role="button">Add to
                            Shopping Cart</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}